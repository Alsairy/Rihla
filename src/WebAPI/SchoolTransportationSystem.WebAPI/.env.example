# Environment Variables Template for Rihla Backend
# Copy this file to .env and update the values for your environment

# Database Configuration
CONNECTION_STRING=Data Source=rihla.db

# JWT Configuration (REQUIRED)
JWT_SECRET_KEY=your-very-secure-secret-key-at-least-32-characters-long
JWT_ISSUER=Rihla
JWT_AUDIENCE=RihlaUsers
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRATION_DAYS=7

# Active Directory Configuration (Optional)
AD_ENABLED=false
AD_DOMAIN=your-domain.com
AD_LDAP_SERVER=ldap.your-domain.com
AD_LDAP_PORT=636
AD_USE_SSL=true
AD_SERVICE_ACCOUNT_USERNAME=
AD_SERVICE_ACCOUNT_PASSWORD=

# Azure AD Configuration (Optional)
AZURE_AD_ENABLED=false
AZURE_AD_TENANT_ID=
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=

# Email Service Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-app-password
SMTP_USE_SSL=true

# SMS Service Configuration (Optional)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=+1234567890

# Security Note: Never commit sensitive values to version control
# Use environment-specific .env files that are excluded from git
