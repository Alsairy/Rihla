{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=rihla.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "",
    "Issuer": "Rihla",
    "Audience": "RihlaUsers",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "ActiveDirectory": {
    "Enabled": false,
    "Domain": "your-domain.com",
    "LdapServer": "ldap.your-domain.com",
    "LdapPort": 636,
    "UseSsl": true,
    "ServiceAccountUsername": "",
    "ServiceAccountPassword": "",
    "UserSearchBase": "OU=Users,DC=your-domain,DC=com",
    "GroupSearchBase": "OU=Groups,DC=your-domain,DC=com",
    "UserFilter": "(&(objectClass=user)(sAMAccountName={0}))",
    "GroupFilter": "(&(objectClass=group)(member={0}))",
    "AzureAd": {
      "Enabled": false,
      "TenantId": "",
      "ClientId": "",
      "ClientSecret": "",
      "Authority": "https://login.microsoftonline.com/{TenantId}",
      "CallbackPath": "/signin-oidc",
      "SignedOutCallbackPath": "/signout-callback-oidc",
      "Scopes": ["openid", "profile", "email"]
    },
    "GroupRoleMapping": {
      "Rihla-Admins": "Admin",
      "Rihla-Managers": "Manager",
      "Rihla-Dispatchers": "Dispatcher",
      "Rihla-Drivers": "Driver",
      "Rihla-Parents": "Parent"
    },
    "EnableFallbackToInternal": true,
    "ConnectionTimeoutSeconds": 30,
    "CacheExpirationMinutes": 60
  }
}
