{
  "ConnectionStrings": {
    "DefaultConnection": "Server=production-server;Database=RihlaDB;User Id=rihla_user;Password=${DB_PASSWORD};TrustServerCertificate=true;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*.rihla.com",
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "Rihla",
    "Audience": "RihlaUsers",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  }
}
